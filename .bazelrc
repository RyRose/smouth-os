common --verbose_failures

test \
  --test_output=errors \
  --test_verbose_timeout_warnings

run --strip=never

build --strip=never

# Options for cross-compiling SmouthOS on the i386 architecture.

common:i386 \
  --crosstool_top=//tools/toolchain \
  --cpu=i386 \
  --compiler=g++

# Use cached version of i686-elf toolchain for Linux

common:i686-elf-cached \
  --action_env="TOOLCHAIN_REPOSITORY=toolchain_i686_elf_cached" \
  --define=i686-elf-cached=true \
  --features=-toolchain_i686_elf_nocached \
  --features=toolchain_i686_elf_cached

# Continuous Integration (ci) options for running SmouthOS on Jenkins.

common:ci \
  --noshow_progress \
  --noshow_loading_progress \
  --color=no \
  -c opt

build:ci \
  --genrule_strategy=standalone \
  --sandbox_debug \
  --spawn_strategy=standalone

test:ci \
  --test_output=errors \
  --test_strategy=standalone
