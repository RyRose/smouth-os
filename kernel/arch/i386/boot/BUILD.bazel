kernel_library(
    name = "dummy_isr",
    tags = ["manual"],
    srcs = [
        "dummy_isr.cc",
    ],
    hdrs = [
        "dummy_isr.h",
    ],
    deps = [
        "//kernel/arch/i386/interrupt:macros",
